<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/base"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/unreal_estate"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/logo"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:background="@drawable/edit_text_border"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/silhoutte"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_height="25dp" />

            <EditText
                android:layout_width="200dp"
                android:hint="Username"
                android:textCursorDrawable="@null"
                android:background="#00000000"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="17sp"
                android:inputType="text"
                android:textColorHint="#bfff"
                android:imeActionLabel="Next"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:id="@+id/username" />

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/edit_text_border"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:layout_marginTop="13dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/lock"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_height="25dp" />

            <EditText
                android:layout_width="200dp"
                android:hint="Password"
                android:background="#00000000"
                android:textColor="#fff"
                android:padding="10dp"
                android:textCursorDrawable="@null"
                android:textSize="17sp"
                android:inputType="textPassword"
                android:textColorHint="#bfff"
                android:imeActionLabel="Next"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:id="@+id/password" />

        </LinearLayout>


        <TextView
            android:text="If you are logging in for the first time in this device, please turn on the Internet Connection."
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstTime" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Login"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:onClick="onClickLogin"
            android:textColor="#fff"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>